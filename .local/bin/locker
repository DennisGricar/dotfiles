#!/bin/sh

#exec xautolock -detectsleep -time 10 -locker "slock" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'Locking screen in 30 seconds'" & 
#exec xidlehook --not-when-fullscreen --not-when-audio --timer 1200 "sudo loginctl suspend" .

export PRIMARY_DISPLAY="$(xrandr | awk '/ primary/{print $1}')"

# Run xidlehook
xidlehook \
  `# Don't lock when there's a fullscreen application` \
  `#--not-when-fullscreen` \
  `# Don't lock when there's audio playing` \
  --not-when-audio \
  `# Dim the screen after 10 minutes, undim if user becomes active` \
  --timer 600 \
    'xrandr --output "$PRIMARY_DISPLAY" --brightness .1' \
    'xrandr --output "$PRIMARY_DISPLAY" --brightness 1' \
  `# lock after 5 more minutes` \
  --timer 300 \
    'slock' \
    '' \
  `# Finally, suspend 20 minutes after it locks` \
  --timer 1200 \
    'loginctl suspend' \
    ''
